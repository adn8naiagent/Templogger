#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Type checking
echo "ğŸ“˜ Checking TypeScript..."
npm run type-check || {
  echo "âŒ TypeScript check failed. Fix errors and try again."
  exit 1
}

# Linting
echo "ğŸ§¹ Running ESLint..."
npm run lint || {
  echo "âŒ Linting failed. Run 'npm run lint:fix' to fix automatically."
  exit 1
}

# Formatting
echo "ğŸ’… Checking Prettier..."
npm run format:check || {
  echo "âŒ Formatting check failed. Run 'npm run format' to fix."
  exit 1
}

# Check for DB safety
echo "ğŸ›¡ï¸ Checking migration safety..."
git diff --cached --name-only | grep -E 'migrations/.*\.sql' | while read file; do
  if grep -iE 'DROP TABLE|DROP COLUMN|DELETE FROM|TRUNCATE' "$file"; then
    echo "âŒ Unsafe operations detected in $file"
    exit 1
  fi
done

echo "âœ… All checks passed!"